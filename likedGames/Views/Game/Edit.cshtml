@model Game

<div class="w-75 mx-auto">
  <h2 class="text-center">Edit Game</h2>

  <form asp-controller="Game" asp-action="Update" asp-route-postId="@Model.GameId" method="POST">
    <div class="form-group">
      <label asp-for="Title"></label>
      <span asp-validation-for="Title" class="text-danger font-weight-bold"></span>
      <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
      <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
      <label asp-for="Rating"></label>
      <span asp-validation-for="Rating" class="text-danger font-weight-bold"></span>
      <input asp-for="Rating" class="form-control" />
    </div>


    <div class="form-group">
      <label asp-for="Src"></label>
      <span asp-validation-for="Src" class="text-danger font-weight-bold"></span>
      <input asp-for="Src" class="form-control" />
    </div>


    <button class="btn btn-sm btn-outline-success">Save</button>
  </form>
</div>